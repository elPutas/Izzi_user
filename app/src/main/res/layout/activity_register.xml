<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:theme="@style/AppTheme"
    tools:context="com.sietecerouno.izzi_user.sections.RegisterActivity">

    <EditText
        android:id="@+id/name"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:hint="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/lastName"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:hint="Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:hint="Correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pass"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:hint="Contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/passR"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:hint="Validar contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_marginTop="@dimen/extraMarginTopLinear"
        android:paddingTop="@dimen/padding_btn"
        android:paddingBottom="@dimen/padding_btn"
        android:textAlignment="center"
        android:background="@drawable/bg_button_green"
        android:text="Enviar"
        android:layout_width="@dimen/width_btn"
        android:layout_height="wrap_content" />
</LinearLayout>
