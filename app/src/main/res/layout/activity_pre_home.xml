<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_3"
    tools:context="com.sietecerouno.izzi_user.sections.PreHomeActivity">

    <LinearLayout
        android:id="@+id/container"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_terms">

        <TextView
            android:layout_marginTop="@dimen/extraMarginTopLinear"
            android:textStyle="bold"
            android:text="Bienvenidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/marginItemsLinear"
            android:textAlignment="center"
            android:text="Agenda un servicio de \nlimpieza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_service"
            android:layout_marginTop="@dimen/extraMarginTopLinear"
            android:paddingTop="@dimen/padding_btn"
            android:paddingBottom="@dimen/padding_btn"
            android:background="@drawable/bg_button_green"
            android:textAlignment="center"
            android:text="Pide tu servicio"
            android:layout_width="@dimen/width_btn"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_pack"
            android:layout_marginTop="@dimen/marginItemsLinear"
            android:paddingTop="@dimen/padding_btn"
            android:paddingBottom="@dimen/padding_btn"
            android:background="@drawable/bg_button_white"
            android:textAlignment="center"
            android:text="Paquete de servicios"
            android:layout_width="@dimen/width_btn"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/paddingLinear"
        android:id="@+id/btn_terms"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:layout_marginTop="@dimen/marginItemsLinear"
        android:textAlignment="center"
        android:text="Terminos y condiciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
