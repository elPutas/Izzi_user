<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_3"
    tools:context="com.sietecerouno.izzi_user.utils.LookingForaHelpActivity">

    <TextView
        android:layout_marginTop="@dimen/extraMarginTopLinear"
        android:layout_marginBottom="@dimen/marginItemsLinear"
        android:paddingTop="@dimen/padding_btn"
        android:paddingBottom="@dimen/padding_btn"
        android:textAlignment="center"
        android:id="@+id/btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_button_green"
        android:text="Cancelar"
        android:layout_width="@dimen/width_btn"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/myLoading"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Estamos buscando un servicio, por favor espera."
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/myLoading"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

</android.support.constraint.ConstraintLayout>
